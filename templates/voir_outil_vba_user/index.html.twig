                            </div>
                            <div class="card-footer">      


                                <a href=" {{path('outils_qhse_vba_detail',{'id':produit_vba.id})}}" class="btn btn-primary">Voir détails</a>


                                <small class="text-body-secondary">

                              
                         

                               
                               <a href="/uploads/{{ produit_vba.pieces_jointes }}"><button type="button" class="btn btn-success"> Télécharger </button> </a> 
                              

                                
                                
                                
                                </small>                    
                            </div>
                        </div> 



                                        
                                </div>
   
      

{% endfor %}



         {% endblock %}