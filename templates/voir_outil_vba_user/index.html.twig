{% extends 'base.html.twig' %}
    
           {% block content %}

            <div class="container">

     {% if app.session.get('email') %}    

     
        <h3>Bienvenue {{app.session.get('prenom')}}</h3>
        <h6><a href="{{path('voir_outil_vba_user')}}">Mes outils</a></h6><br/>   
    {% endif %} 
            
           <div class="row row-cols-1 row-cols-md-3 g-4">  



   {% for produit_vba in produit_vba %}                   
         

                        <div class="col">



                        <div class="card h-100">
                            <img src="{{ asset('assets/images/business.jpg') }}" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title">{{ produit_vba.nom_outil }}</h5>
