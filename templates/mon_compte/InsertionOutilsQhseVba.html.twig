{% extends 'base.html.twig' %}

{% block title %}Hello InsertionOutilsQhseVbaController!{% endblock %}

{% block content %}




 <div class="container">
<h3>Insertion Outil Vba</h3>


{% if notification %}

  <div class="alert alert-primary" role="alert">
   {{ notification }}
    </div>


{% endif %}

<form action="#" method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="exampleFormControlInput0">Nom de l'outil</label>
    <input class="form-control" id="exampleFormControlInput0" type="text" name="nom_outil" >
  </div>

    <div class="form-group">
    <label for="exampleFormControlTextarea1">Description de l'outil</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="description_outil" rows="3"></textarea>
  </div>

   
   <div class="form-group">
    <label for="formGroupExampleInput1">Prix</label>
    <input type="number" class="form-control" id="formGroupExampleInput1" name="prix">
  </div>

         <div class="form-group">
    <label for="formGroupExampleInput2">Nom Video</label>
    <input type="text" name="video_outil" class="form-control" id="formGroupExampleInput2">
  </div>

  
  <label for="exampleFormControlSelect1">Themes</label>
    <select name="theme" class="form-control" id="exampleFormControlSelect1">

      {% for theme in themes %}
      <option value="{{theme.id}}">{{theme.nom}}</option>
      {% endfor %}

    </select>



    <div class="form-group">
    <label for="formGroupExampleInput5">Documentation (pdf)</label>
    <input type="file" name="documentation_outil" class="form-control" id="formGroupExampleInput5" placeholder="Example input">
  </div>

     <div class="form-group">
    <label for="formGroupExampleInput3">Image de l'outil</label>
    <input type="file" name="image_outil" class="form-control" id="formGroupExampleInput3" placeholder="Example input">
  </div>

    <div class="form-group">
    <label for="formGroupExampleInput4">Fichier Pi√®ces jointes (fichier excel)</label>
    <input type="file" name="pieces_jointes" class="form-control" id="formGroupExampleInput4" placeholder="Example input">
    </div>
  <br/>
  <div class="form-group">
    <div class="col-sm-10">
      <button type="submit" name="soumettre" class="btn btn-primary">Soumettre</button>
    </div>
  </div>



 
</form>

</div>

{% endblock %}
