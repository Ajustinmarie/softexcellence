{% extends 'base.html.twig' %}

{% block title %}Hello EspaceLoginNouveauController!{% endblock %}

{% block content %}

  {% if app.session.has('email') %}

        <script>
            window.location.href = "{{ path('app_mon_compte') }}";
        </script>
 {% endif %}


                <div class="container">
                          
                      
                            
                             {% if notification is not null %}
                            <div class="alert alert-danger" role="alert">
                                  {{notification}}
                            </div>
                            {% endif %}

                          
                             
                            <h1 class="h3 mb-3 font-weight-normal">Espace - Connexion </h1>

                            {% for message in app.flashes('notice') %}
                            <div class="alert alert-info"> {{message}}  </div>
                            {% endfor %}

                           
                             <form action="#" method="post" enctype="multipart/form-data">

                            <div class="form-group">

                            <label for="exampleInputEmail1">Email</label>
                            <input type="email" name="email"
                            
                            {% if email is not null %} value="{{ email }}" {% endif %}

                            class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Votre email">
                            <small id="emailHelp" class="form-text text-muted">Nous n'allons jamais partager votre email à quiconque</small>


                           </div>


                            <div class="form-group">
                                <label for="exampleInputPassword1">Password</label>
                                <input type="password" name="password" 
                                
                                {% if password is not null %} value="{{ password }}" {% endif %}
                                
                                class="form-control" id="exampleInputPassword1" placeholder="Password">
                            </div>

                             <div class="form-group mt-3">
                             <a href="{{path('reset_password')}}">Mot de passe oublié</a>
                             </div>

                            
                            <!--
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                                <label class="form-check-label" for="exampleCheck1">Check me out</label>
                            </div>
                            -->
                            <br/>
                            <button type="submit" class="btn btn-primary">Soumettre</button>

                             </form>

                </div>


{% endblock %}
